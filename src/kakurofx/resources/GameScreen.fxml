<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="kakurofx.GameScreenController" fx:id="gameScreen">
	<HBox>
		<Button text="Imprimer" onAction="#printGrid" />
		<Button text="Sauvegarder" />
		<Button fx:id="resetButton" text="Recommencer" onAction="#reset" />
		<Button fx:id="solutionButton" text="Solution" onAction="#solution" />
		<Button fx:id="quitButton" text="Quitter" onAction="#goToTitleScreen" />
	</HBox>
	<StackPane fx:id="gridPaneContainer" VBox.vgrow="ALWAYS" />
</VBox>
